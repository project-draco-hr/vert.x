{
  Http2Headers h=new DefaultHttp2Headers();
  h.method(method.name());
  h.path(uri);
  h.scheme("https");
  encoder.writeHeaders(context,id,h,0,end && buf == null,context.newPromise());
  if (buf != null) {
    encoder.writeData(context,id,buf,0,end,context.newPromise());
  }
  context.flush();
}
