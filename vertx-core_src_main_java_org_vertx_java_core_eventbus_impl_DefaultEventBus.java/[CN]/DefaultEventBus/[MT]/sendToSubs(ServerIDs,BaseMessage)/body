{
  if (message.send) {
    ServerID sid=subs.choose();
    if (!sid.equals(serverID)) {
      sendRemote(sid,message);
    }
 else {
      receiveMessage(message);
    }
  }
 else {
    for (    ServerID sid : subs) {
      if (!sid.equals(serverID)) {
        sendRemote(sid,message);
      }
 else {
        receiveMessage(message);
      }
    }
  }
}
