{
  int numShorts=100;
  Buffer b=Buffer.buffer(numShorts * 2);
  for (short i=0; i < numShorts; i++) {
    b.setShort(i * 2,(short)(Short.MAX_VALUE + (int)i));
  }
  for (short i=0; i < numShorts; i++) {
    assertEquals(Integer.toUnsignedLong(Short.MAX_VALUE + i),b.getUnsignedShort(i * 2));
  }
}
