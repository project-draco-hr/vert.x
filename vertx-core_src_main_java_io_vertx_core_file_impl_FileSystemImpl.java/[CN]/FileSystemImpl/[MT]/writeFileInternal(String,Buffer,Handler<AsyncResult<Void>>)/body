{
  Objects.requireNonNull(data,"no null data accepted");
  Path target=vertx.resolveFile(path).toPath();
  return new BlockingAction<Void>(handler){
    public Void perform(){
      try {
        Files.write(target,data.getBytes());
        return null;
      }
 catch (      IOException e) {
        throw new FileSystemException(e);
      }
    }
  }
;
}
