{
  if (replyHandler != null) {
    long timeout=options.getSendTimeout();
    String replyAddress=generateReplyAddress();
    message.setReplyAddress(replyAddress);
    Handler<Message<T>> simpleReplyHandler=convertHandler(replyHandler);
    HandlerRegistration<T> registration=new HandlerRegistration<>(vertx,metrics,this,replyAddress,true,true,replyHandler,timeout);
    registration.handler(simpleReplyHandler);
    return registration;
  }
 else {
    return null;
  }
}
