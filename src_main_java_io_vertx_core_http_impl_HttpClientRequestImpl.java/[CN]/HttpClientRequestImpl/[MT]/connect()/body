{
  if (!connecting) {
    Waiter waiter=new Waiter(this,vertx.getContext()){
      @Override void handleFailure(      Throwable failure){
        handleException(failure);
      }
      @Override void handleSuccess(      HttpClientConnection conn){
        connected(conn);
      }
      @Override boolean isCancelled(){
        return exceptionOccurred;
      }
    }
;
    client.getConnection(port,host,waiter);
    connecting=true;
  }
}
