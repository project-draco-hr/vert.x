{
  this.host=host;
  this.port=port;
  this.client=client;
  this.request=new DefaultHttpRequest(toNettyHttpVersion(client.getOptions().getProtocolVersion()),toNettyHttpMethod(method),relativeURI,false);
  this.chunked=false;
  this.method=method;
  this.vertx=vertx;
  this.exceptionOccurred=new AtomicBoolean(false);
}
