{
  ByteBuf chunk;
  while (!stream.isNotWritable() && (chunk=(ByteBuf)in.current()) != null && length > 0) {
    length-=chunk.readableBytes();
    boolean end=length == 0;
    stream.writeData(chunk.retain(),end);
    stream.handlerContext.flush();
    in.remove();
    if (end) {
      endHandler.handle(null);
    }
  }
}
