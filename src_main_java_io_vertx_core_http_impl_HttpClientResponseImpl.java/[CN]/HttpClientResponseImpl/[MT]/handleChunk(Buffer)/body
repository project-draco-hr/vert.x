{
  if (paused) {
    if (pausedChunk == null) {
      pausedChunk=data.copy();
    }
 else {
      pausedChunk.appendBuffer(data);
    }
  }
 else {
    request.dataReceived();
    if (pausedChunk != null) {
      data=pausedChunk.appendBuffer(data);
      pausedChunk=null;
    }
    bytesRead+=data.length();
    if (dataHandler != null) {
      try {
        dataHandler.handle(data);
      }
 catch (      Throwable t) {
        handleException(t);
      }
    }
  }
}
