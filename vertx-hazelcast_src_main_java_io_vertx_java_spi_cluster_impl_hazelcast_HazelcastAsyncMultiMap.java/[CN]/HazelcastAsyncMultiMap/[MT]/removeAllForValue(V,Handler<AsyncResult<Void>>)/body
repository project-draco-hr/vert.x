{
  vertx.executeBlocking(new Action<Void>(){
    public Void perform(){
      for (      Map.Entry<K,V> entry : map.entrySet()) {
        V v=entry.getValue();
        if (val.equals(v)) {
          map.remove(entry.getKey(),v);
        }
      }
      return null;
    }
  }
,completionHandler);
}
