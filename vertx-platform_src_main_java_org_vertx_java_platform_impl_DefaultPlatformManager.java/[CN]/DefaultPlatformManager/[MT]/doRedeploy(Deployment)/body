{
  runInBackground(new Runnable(){
    public void run(){
      if (deployment.modDir != null) {
        deployModuleFromFileSystem(modRoot,true,deployment.name,deployment.modID,deployment.config,deployment.instances,null,deployment.ha,null);
      }
 else {
        deployModuleFromCP(true,deployment.name,deployment.modID,deployment.config,deployment.instances,deployment.classpath,null);
      }
    }
  }
,null);
}
