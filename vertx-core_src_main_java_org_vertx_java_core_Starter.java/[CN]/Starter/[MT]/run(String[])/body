{
  Args args=new Args(sargs);
  sargs=removeOptions(sargs);
  if (sargs.length == 0) {
    displaySyntax();
  }
 else {
    String command=sargs[0].toLowerCase();
    if ("version".equals(command)) {
      log.info(getVersion());
    }
 else {
      if (sargs.length < 2) {
        displaySyntax();
      }
 else {
        String main=sargs[1];
switch (command) {
case "run":
          runVerticle(main,args);
        break;
default :
      displaySyntax();
  }
}
}
}
}
