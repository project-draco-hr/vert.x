{
  Buffer myTrustStoreAsABuffer=vertx.fileSystem().readFileBlocking("/path/to/your/truststore.pfx");
  NetServerOptions options=new NetServerOptions().setSsl(true).setClientAuthRequired(true).setPfxCaOptions(new PfxOptions().setValue(myTrustStoreAsABuffer).setPassword("password-of-your-truststore"));
  NetServer server=vertx.createNetServer(options);
}
