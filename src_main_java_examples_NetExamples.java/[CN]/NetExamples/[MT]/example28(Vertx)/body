{
  Buffer myCaAsABuffer=vertx.fileSystem().readFileBlocking("/path/to/your/server-ca.pfx");
  NetServerOptions options=new NetServerOptions().setSsl(true).setClientAuth(SSLHelper.ClientAuth.REQUIRED).setPemTrustOptions(new PemTrustOptions().addCertValue(myCaAsABuffer));
  NetServer server=vertx.createNetServer(options);
}
