{
  backgroundPool=Executors.newFixedThreadPool(options.getWorkerPoolSize(),new VertxThreadFactory("vert.x-worker-thread-"));
  orderedFact=new OrderedExecutorFactory(backgroundPool);
  checker=new BlockedThreadChecker(options.getBlockedThreadCheckPeriod(),options.getMaxEventLoopExecuteTime());
  eventLoopGroup=new NioEventLoopGroup(options.getEventLoopPoolSize(),new VertxThreadFactory("vert.x-eventloop-thread-",checker));
}
