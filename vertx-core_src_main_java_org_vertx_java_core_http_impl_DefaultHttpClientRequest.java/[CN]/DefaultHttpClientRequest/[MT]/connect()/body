{
  if (!connecting) {
    client.getConnection(new Handler<ClientConnection>(){
      public void handle(      ClientConnection conn){
        if (exceptionOccurred) {
          conn.close();
        }
 else         if (!conn.isClosed()) {
          connected(conn);
        }
 else {
          connect();
        }
      }
    }
,exceptionHandler,context);
    connecting=true;
  }
}
