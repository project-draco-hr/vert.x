{
  super(vertx,channel,context,metrics);
  this.client=client;
  this.ssl=ssl;
  this.host=host;
  this.port=port;
  if ((port == 80 && !ssl) || (port == 443 && ssl)) {
    this.hostHeader=host;
  }
 else {
    this.hostHeader=host + ':' + port;
  }
  this.listener=listener;
  this.exceptionHandler=exceptionHandler;
  this.metrics=metrics;
}
