{
  final Path target=PathAdjuster.adjust(vertx,Paths.get(path));
  return new BlockingAction<Void>(vertx,handler){
    public Void action(){
      try {
        Files.write(target,data.getBytes());
        return null;
      }
 catch (      IOException e) {
        throw new FileSystemException(e);
      }
    }
  }
;
}
