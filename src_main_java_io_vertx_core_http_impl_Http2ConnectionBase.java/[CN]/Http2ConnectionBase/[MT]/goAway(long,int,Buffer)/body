{
  if (errorCode < 0) {
    throw new IllegalArgumentException();
  }
  if (lastStreamId < 0) {
    throw new IllegalArgumentException();
  }
  connHandler.encoder().writeGoAway(handlerCtx,lastStreamId,errorCode,debugData != null ? debugData.getByteBuf() : Unpooled.EMPTY_BUFFER,handlerCtx.newPromise());
  handlerCtx.flush();
  return this;
}
